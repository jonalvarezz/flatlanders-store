*,
*:before,
*:after
	box-sizing border-box

html
	font-size 100%

body
	background-color #f8f8f8

img
	max-width 100%
	height auto
	vertical-aling middle

ul
	padding 0
	li
		list-style-type none

.list-group
	width 95%
	max-width 47rem
	margin 2rem auto

.list-group-item
	margin-bottom 1rem
	transition border .2s ease-in-out
	h3
		font-size 2.4rem
		width 100%
		max-width 30rem
		margin 1rem auto 2rem
		padding-bottom 1rem
		border-bottom 5px solid #f8f8f8 
	form
		background-color #f8f8f8
		padding 1rem
	.panels > div
		padding 1rem
	&:hover
		border-color #999
		


.img-wrap
	text-align center
	img
		border-radius 100%

.img-thumbnails
	margin 1rem 0 2rem
	text-align center
	.small-image
		width 80px
		margin 0 5px
		display inline-block
